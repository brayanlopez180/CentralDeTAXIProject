<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/white">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_gravity="center">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:textStyle="bold"
            android:fontFamily="@font/letra78"
            android:textAlignment="center"
            android:layout_margin="40dp"
            android:textSize="50sp"
            android:textColor="@color/colorGris"/>


        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:src="@drawable/pic3"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primero debes seleccionar tu rol"
            android:fontFamily="@font/letra30"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="40dp"
            android:textSize="25sp"
            android:textColor="@color/colorGris"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/botonSoyConductor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SOY CONDUCTOR"
                android:layout_gravity="bottom"
                android:fontFamily="@font/letra32"
                android:backgroundTint="@color/color4"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/botonSoyUsuario"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SOY USUARIO"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/letra32"
                app:cornerRadius="10dp"
                android:backgroundTint="@color/black"
                android:textColor="@color/color4"/>

        </LinearLayout>


    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>